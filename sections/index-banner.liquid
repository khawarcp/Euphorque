<div class="banner">
		  		<div class="banner-product">
					<div class="container">
						<div class="row justify-content-center">
                          {% assign product = all_products[section.settings.product_1] %}
                          {% if product != blank %}
							<div class="col-sm-6 col-lg-4 mb-5 mb-lg-0">
								<a href="{{ product.url }}">
									<div class="product">
                                      {% if product.featured_image != blank %}
										 <img src="{{ product.featured_image | img_url : "master" }}" loading="lazy" alt="{{ product.featured_image.alt }}" class="img-fluid">
                                      {% else %}
                                        {{ 'product-1' | placeholder_svg_tag }}
                                        {% endif %}
                                      
										<div class="product-info ">
											<div class="d-flex justify-content-between">
												<div class="product-name">
													<span>{{ product.title }}</span>
												</div>
												<div class="product-price align-self-center">
													<span>{{ product.price | money }}</span>
												</div>
											</div>
											<div class="product-category">
													<span> {{ product.type }} </span>
											</div>
										</div>
									</div>
								</a>
							</div>
                          {% endif %}
							<div class="col-sm-6 col-lg-4 mb-5 mb-lg-0 ">
								<div class="view-more">
									<div class="d-flex flex-column align-self-center position-relative">
										<div class="banner-view-more">
											<div class="logo-box">
                                              {% if section.settings.button_text != blank %}
												<a href="{{ section.settings.button_url }}">
                                                   {% endif %}
                                                    {% if section.settings.image != blank %}
                                                  <img src="{{ section.settings.image | img_url : "master" }}" loading="lazy" alt="{{ shop.name }}" class="img-fluid">
                                                      {% endif %}
                                                  {% if section.settings.button_text != blank %}
                                                </a>
                                               {% endif %}
											</div>
											<h3>
												{{ section.settings.heading }}
											</h3>
                                          {% if section.settings.button_text != blank %}
											<a href="{{ section.settings.button_url }}">
                                                  <button class="view-more-btn">
    												{% render 'btn-border' %}
    												<span>{{ section.settings.button_text }}
                                                  </span>
    											</button>
                                            </a>
                                          {% endif %}
										</div>
                                                
									</div>
								</div>
							</div>
							 {% assign product = all_products[section.settings.product_2] %}
                          {% if product != blank %}
							<div class="col-sm-6 col-lg-4 mb-5 mb-lg-0">
								<a href="{{ product.url }}">
									<div class="product">
                                      {% if product.featured_image != blank %}
										 <img src="{{ product.featured_image | img_url : "master" }}" loading="lazy" alt="{{ product.featured_image.alt }}" class="img-fluid">
                                      {% else %}
                                        {{ 'product-1' | placeholder_svg_tag }}
                                        {% endif %}
                                      
										<div class="product-info ">
											<div class="d-flex justify-content-between">
												<div class="product-name">
													<span>{{ product.title }}</span>
												</div>
												<div class="product-price align-self-center">
													<span> {{ product.price | money }} </span>
												</div>
											</div>
											<div class="product-category">
													<span> {{ product.type }} </span>
											</div>
										</div>
									</div>
								</a>
							</div>
                          {% endif %}
						</div>
					</div>
				</div>	
		  </div>
{% schema %}
  {
    "name": "Banner",
    "settings": 
    [
        {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading"
        },
        {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Image"
        },
        {
            "type" : "text",
            "id" : "button_text",
            "label" : "Button Text"
        },
        {
            "type" : "url",
            "id" : "button_url",
            "label" : "Button url"
        },
        {
            "type" : "product",
            "id" : "product_1",
            "label" : "Product"
        },
        {
            "type" : "product",
            "id" : "product_2",
            "label" : "Product"
        }
    ],
    "presets":
      [
          {
              "name" : "Banner",
              "category" : "Custom Sections"
          }
      ]
  }
{% endschema %}

