<section class="form-sec p-60 pt-1">
	 <div class="container">
	 	<h2 class="section-heading mb-4 text-center"> {{ section.settings.heading }} </h2>
	 	<div class="fill-form mb-3">
	 		{%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
                {%- if form.posted_successfully? -%}
                  <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</h2>
                {%- elsif form.errors -%}
                  <div class="form__message">
                    <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
                  </div>
                  <ul class="form-status-list caption-large" role="list">
                    <li>
                      <a href="#ContactForm-email" class="link">
                        {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                      </a>
                    </li>
                  </ul>
                {%- endif -%}
	 			<div class="row">
	 				  <div class="col-sm-6 mb-5">
	 				  	<input type="text" id="ContactForm-name" class="form-control" name="contact[name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Your name">
	 				  </div>
	 				  <div class="col-sm-6 mb-5">	 				  	
                        <input
                          autocomplete="email"
                          type="email"
                          id="ContactForm-email"
                          class="form-control"
                          name="contact[email]"
                          spellcheck="false"
                          autocapitalize="off"
                          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                          aria-required="true"
                          {% if form.errors contains 'email' %}
                            aria-invalid="true"
                            aria-describedby="ContactForm-email-error"
                          {% endif %}
                          placeholder="Your e-mail"
                        >
                        {%- if form.errors contains 'email' -%}
                          <small class="contact__field-error" id="ContactForm-email-error">
                            <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                            <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
                          </small>
                        {%- endif -%}
	 				  </div>
	 				  <div class="col-sm-6 mb-5">	 				  	
                        <input type="tel" id="ContactForm-phone" class="form-control" name="contact[phone_number]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="Phone">
	 				  </div>
	 				  <div class="col-sm-6 mb-5">
	 				  	<input type="text" id="ContactForm-installation_address" class="form-control" name="contact[installation_address]" value="{% if form.installation_address %}{{ form.installation_address }}{% endif %}" placeholder="Installation Address">
	 				  </div>
	 				  <div class="col-sm-12 mb-5">
	 				  	<input type="text" id="ContactForm-service_requested" class="form-control" name="contact[service_requested]" value="{% if form.service_requested %}{{ form.service_requested }}{% endif %}" placeholder="Service Requested">
	 				  </div>
	 				  <div class="col-sm-6 mb-5 position-relative">
	 				  	<input type="date" id="ContactForm-date" class="form-control" name="contact[date]" value="{% if form.date %}{{ form.date }}{% endif %}" placeholder="Date">	
	 				  </div>
	 				  <div class="col-sm-6 mb-5">	 				  	
                        <input type="text" id="ContactForm-tree_size" class="form-control" name="contact[tree_size]" value="{% if form.tree_size %}{{ form.tree_size }}{% endif %}" placeholder="Tree Size">
	 				  </div>
	 				  <div class="col-12 text-end">
	 				  	<button class="view-more-btn">
						    {% render 'btn-border' %}
							<span>Send Request</span>
						</button>
	 				  </div>
	 			</div>
	 		{%- endform -%}
	 	</div>
	 </div>
</section>
{% schema %}
  {
    "name": "Form",
    "settings":
    [
        {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading"
        }
    ]
  }
{% endschema %}

