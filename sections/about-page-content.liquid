<section class="about-page p-60 mb-5">
	<div class="container">
		<div class="row">
			<div class="col-md-7 align-self-center">
				<div class="about-content">
					<h2 class="section-heading mb-3">{{ section.settings.heading }}</h2>
					{{ page.content }}
				</div>
			</div>
			<div class="col-md-5 ">
				<div class="abt-img">
                  {% if section.settings.image != blank %}
					<img src="{{ section.settings.image | img_url : 'master' }}" loading="lazy" alt="{{ section.settings.image.alt }}" class="img-fluid">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag }}
                  {% endif %}
				</div>
			</div>
		</div>
	</div>
	
</section>

{% schema %}
  {
    "name": "Page Content",
    "settings": 
    [
        {
            "type" : "text",
            "id" : "heading",
            "label": "Heading"
        },
        {
            "type" : "image_picker",
            "id" : "image",
            "label": "Image"
        }
    ]
  }
{% endschema %}

