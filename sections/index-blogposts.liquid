<section class="fashion-gallery">
	<div class="container">
		<h2 class="section-heading mb-5"> {{ section.settings.heading }} </h2>
		<div class="row">
            {% assign articles = blogs[section.settings.blogposts].articles %}
			{% for article in articles %}
            <div class="col-sm-6 col-lg-3 mb-5 mb-lg-0">
				<div class="fashion-item">
					<div class="fashion-img">
						<img src="{{ article.image | img_url : "master" }}" class="img-fluid">
					</div>
					<div class="fashion-content">
						<span class="post-date"> {{ article.published_at | date: "%B %d, %Y"  }} </span>
						<a href="{{ article.url }}"><h4 class="post-title mt-3"> {{ article.title }} </h4></a>
					</div>
				</div>
			</div>
            {% endfor %}
		</div>
	</div>
</section>
{% schema %}
  {
    "name": "Blogposts",
    "settings": 
    [
        {
            "type" : "text",
            "id" : "heading",
            "label": "Heading"
        },
        {
            "type" : "blog",
            "id" : "blogposts",
            "label": "Blog"
        }
    ],
    "presets":
    [
        {
           "name" : "Blogposts",
            "category" : "Custom Sections"
        }
    ]
  }
{% endschema %}

